<div　class="row">
  <h4><%= @customer.full_name %>さんの会員情報編集</h4>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local: true do |f| %>
    <table class="table">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th><%= f.label :name, "氏名" %></th>
        <td><%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :name, "フリガナ" %></th>
        <td>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :postal_code, "郵便番号" %></th>
        <td><%= f.number_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label :address, "住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></th>
        <td><%= f.telephone_field :telephone_number %></td>
      </tr>
      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th><%= f.label :is_deleted, "会員ステータス" %></th>
        <td>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効", value: :false %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会", value: :true %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td class="row text-right">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>