<div>
  <p><%= @customer.full_name %>さんの会員詳細</p>
    <div>
      <p>会員ID</p>
      <%= @customer.id %>
    </div>
    <div>
      <p>氏名</p>
      <%= @customer.last_name %>　<%= @customer.first_name %>
    </div>
    <div>
      <p>フリガナ</p>
      <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %>
    </div>
    <div>
      <p>郵便番号</p>
      <%= @customer.postal_code %>
    </div>
    <div>
      <p>住所</p>
      <%= @customer.address %>
    </div>
    <div>
      <p>電話番号</p>
      <%= @customer.telephone_number %>
    </div>
    <div>
      <p>メールアドレス</p>
      <%= @customer.email %>
    </div>
    <div>
      <p>会員ステータス</p>
      <% if @customer.is_deleted == false %>
        <p>有効</p>
      <% else %>
        <p>退会</p>
      <% end %>
    </div>
    <div>
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_order_path, class:"btn btn-success" %>
    </div>
</div>