<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    <h2>ジャンル編集</h2><br>
      <div class="edit-genre-form">
        <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
          <div>
            <%= f.label :name, "ジャンル名" %>
            <%= f.text_field :name, class:"genre_name", class: "col-md-4" %>
            <%= f.submit '変更を保存', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>