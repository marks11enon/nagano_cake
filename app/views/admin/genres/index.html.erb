<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    <h2>ジャンル追加・一覧画面</h2><br>
      <div class="form-group col-md-10">
        <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
          <div>
            <%= f.label :name, "ジャンル名", class: "col-md-6" %>
            <%= f.text_field :name, class:"genre_name" %>
            <%= f.submit '新規登録', class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <br>
      <table class="table genre-index">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>