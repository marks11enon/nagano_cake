<div>
  <p>ジャンル一覧・追加</p>
     <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class:"genre_name" %>
        </div>
        <%= f.submit '新規登録', class:"btn btn-success" %>
      <% end %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>