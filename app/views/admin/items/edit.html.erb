<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="row">
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch, local: true do |f| %>
      <div class="col-xs-5">
        <h2>商品編集</h2>

        <!-- 画像選択欄  -->
        <div class="item-new-form">
          <%= f.label :image, "商品画像" %>
          <%= f.file_field :image, accept: "image/*", class:"item_image" %>
        </div>
        <div class="product-img" style="margin-top: 20px;">
          <%= attachment_image_tag @item, :image, :fill, 300, 250, fallback: 'no_image.jpg' %>
        </div>
      </div>

      <div class="col-xs-5 col-xs-offset-2">
        <table class="new-form-table">
          <tbody>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :introduction, class: "form-control" %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
            </tr>
            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price, class: "form-control" %>円</td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active_true, "販売中", value: :ture %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active_false, "販売停止中", value: :false %>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="text-right">
          <%= f.submit '変更を保存', class: "btn btn-primary text-right" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>