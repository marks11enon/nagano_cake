<p>商品一覧</p>
<div>
  <%= link_to "+", new_admin_item_path %>
</div>
<div>
  <div>
    <table>
      <thead>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active == false %>
              <td>販売停止中</td>
            <% else %>
              <td>販売中</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>