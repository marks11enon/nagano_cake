<div class="container">
  <div class="col-xs-10 col-xs-offset-1">
  <h2>商品一覧</h2>

    <div class="text-right">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-success btn-success btn-circle btn-lg">＋</button>
      <% end %>
    </div><br>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == false %>
                販売停止中
              <% else %>
                販売中
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>