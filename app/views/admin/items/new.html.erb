<div class="container">
  <div>
  <h2>商品新規登録</h2>

    <!-- 画像選択欄  -->
    <div>
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <%= f.attachment_field :image, placeholder: "商品画像" %>
    </div><br>

    <!-- 商品登録フォーム  -->
    <div>
      <div class="new-field">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, class:"item_name" %>
      </div>
      <div class="new-field">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction, class:"item_introduction" %>
      </div>
        <!-- ここにジャンル選択のプルダウンを挿入-->
      <div class="new-field">
        <%= f.label :genre_id, "ジャンル" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
      </div>

      <div class="new-field">
        <%= f.label :price, "税抜価格" %>
        <%= f.text_field :price, class:"item_price" %>円
      </div>
      <div class="new-field">
        <%= f.label :is_active, "販売ステータス" %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active_true, "販売中", value: :ture %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active_false, "販売停止中", value: :false %>
      </div>
      <div>
        <%= f.submit '新規登録', class: "btn btn-primary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>