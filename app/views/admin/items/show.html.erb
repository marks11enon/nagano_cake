<div>
  <p>商品詳細</p>
    <div>
      <%= image_tag @item.image, size: "300x300" %>
    </div>
    <div>
      <p>商品名</p>
      <%= @item.name %>
    </div>
    <div>
      <p>商品説明</p>
      <%= @item.introduction %>
    </div>
    <div>
      <p>ジャンル</p>
      <%= @item.genre.name %>
    </div>
      <p>税込価格<br>
      （税抜価格）</p>
      <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円
    </div>
    <div>
      <p>販売ステータス</p>
      <% if @item.is_active == false %>
        <p>販売停止中</p>
      <% else %>
        <p>販売中</p>
      <% end %>
    </div>
    <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>
</div>