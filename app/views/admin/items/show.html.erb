<div class="container">
  <h2>商品詳細</h2><br>
  <div class="row">
    <div class="col-sm-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 250, fallback: 'no_image.jpg' %>
    </div>

    <!-- 商品登録フォーム -->
    <div class="col-sm-8">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == false %>
                販売停止中
              <% else %>
                販売中
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= button_to "編集する", edit_admin_item_path(@item.id), method: :get, class:"btn btn-primary", style: "margin-left:50%;"%>
    </div>
  </div>
</div>