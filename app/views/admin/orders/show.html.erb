<div class="row">
  <h2>注文履歴詳細</h2>
  <table class="table">
    <tbody>
      <tr>
        <th class="col-xs-4">購入者</th>
        <td class="col-xs-8">
          <%= link_to admin_customer_path(@order.customer) do %>
            <%= @order.customer.last_name %>
            <%= @order.customer.first_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th class="col-xs-4">注文日</th>
        <td class="col-xs-8"><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <th class="col-xs-4">配送先</th>
        <td class="col-xs-8"><%= @order.address %></td>
      </tr>
      <tr>
        <th class="col-xs-4">支払方法</th>
        <td class="col-xs-8"><%= @order.payment %></td>
      </tr>
      <tr>
        <th class="col-xs-4">注文ステータス</th>
        <td class="col-xs-8">
        <%= form_with model: @order, url:admin_order_path(@order) do |f| %>
          <%= f.select :status, Order.statuses.keys.to_a %>
          <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="col-xs-8">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= (order_detail.price).floor.to_s(:delimited, delimiter: ',') %></td>
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.price * order_detail.amount).floor.to_s(:delimited, delimiter: ',') %></td>
          <td>
            <%= form_with model: @order_detail, url:admin_order_detail_path(order_detail), local: true do |f| %>
              <%= f.select :making_status, OrderDetail.making_statuses.keys.to_a %>
              <%= f.submit '更新',class:"btn btn-success" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <br><br><br><br><br><br><br><br><br><br>

  <div class="col-xs-4">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>商品合計</td>
          <td><%= (@order.total - @order.postage).to_s(:delimited, delimiter: ',') %></td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @order.postage.to_s(:delimited, delimiter: ',') %></td>
        </tr>
        <tr>
          <td>請求合計金額</td>
          <td><%= @order.total.to_s(:delimited, delimiter: ',') %></td>
        </tr>
      </tbody>
    </table>
   </div>
  </div>
</div>