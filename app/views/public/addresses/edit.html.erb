<div>
  <p>配送先編集</p>
  <%= form_with model: @address, local: true do |f| %>
    <div class="field">
      <%= f.label :postal_code, "電話番号(ハイフンなし)" %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="field">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %>
    </div>
    <div class="actions">
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div>
  <% end %>
</div>