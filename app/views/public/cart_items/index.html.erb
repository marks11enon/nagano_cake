<div class="row">
	<div class="col-xs-12">
		<div>
			<h3>ショッピングカート</h3>
			<%= link_to "カートを空にする", destroy_all_path, method: :delete, class: "pull-right btn btn-danger" %>
		</div>
		<table class="table table-hover table-bordered col-xs-10" >
      <thead>
        <tr class="info">
          <th class="col-xs-3">商品名</th>
          <th class="col-xs-2">単価(税込)</th>
          <th class="col-xs-1">数量</th>
          <th class="col-xs-1">小計</th>
          <th class="col-xs-1"></th>
        </tr>
      </thead>
      <tbody>
				<% @cart_items.each do |cart_item| %>
				<tr>
					<!-- 画像挿入は要確認 -->
					<td class="col-xs-3"><%= cart_item.item.name %></td>
					<td class="col-xs-2">
						<%= hidden_field_tag :item_price, cart_item.item.price %>
						<%= cart_item.item.with_tax_price %>
					</td>
						<%= form_with model: @cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
							<td class="col-xs-1">
								<%= f.hidden_field :item_id, :value => cart_item.item.id %>
      					<%= f.select :amount, *[1..10] %>
								<%= f.submit "変更", class: "btn btn-primary" %>
							</td>
						<% end %>
					<td class="col-xs-1">
						<%= cart_item.subtotal %>
					</td>
					<td class="col-xs-1">
						<div>
							<%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
						</div>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="col-xs-8">
	<span><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></span>
</div>
<div class="col-xs-4">
	<table class="table table-bordered">
		<tr>
			<td class="info col-xs-2">合計金額</td>
      <td class="col-xs-2"><%= @total %></td>
		</tr>
	</table>
</div>
<div class="col-xs-4 col-xs-offset-4">
	<span><%= link_to "情報入力に進む", orders_path, class: "col-xs-12 btn btn-success" %></span>
</div>

