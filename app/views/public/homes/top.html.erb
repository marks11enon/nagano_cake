<div class="container">
  <div class:"row">
	  <%= render 'public/items/sidebar', genres: @genres %>

    <div class="col-xs-9">
      <div class="bg-top">
        <div class="bg-top2">
          <h4 style="font-family: HiraMinPro-W6; color: #000000; margin: 20px 0;">
            ようこそ、ながのCAKEへ！<br>
            このサイトは、ケーキ販売のECサイトになります。<br>
            会員でない方も商品の閲覧はできますが、<br>
            購入には会員登録が必要になります。<br>
          </h4>
        </div>
      </div>

      <h4 class="recommended-items" style="font-family: HiraMinPro-W6; color: #000000;">オススメ商品</h4><br>
      <div class="row">

        <div id="multiple-items">
          <% @items.last(4).each do |item| %>
            <div class="box" style="float:left; margin-right:20px;">
              <%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
                <%= attachment_image_tag item, :image, :fill, 180, 125, format: 'jpeg',fallback: "no_image.jpg" %><br>
                <%= item.name %><br>
                <%= item.price.to_s(:delimited, delimiter: ',') %>円
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-9"></div>
    <div class="col-xs-2">
      <p><%= link_to "もっと見る", items_path, class: "pull-right", style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %></p>
    </div>
  </div>
</div>