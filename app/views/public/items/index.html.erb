<div class="container">
  <div class="row">
  	<div class="col-xs-3">
  	  <div class="sidebar">
  	    <%= render 'public/items/sidebar', genres: @genres %>
  	  </div>
    </div>
    <br>

    <div class="col">
      <h4 style="margin: 20px 0;">商品一覧(全<%= @quantity %>件)</h4>

        <% @items.each do |item| %>
          <div style="float:left; margin:10px 0px 0px 30px;">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, size:"200x150", format: 'jpeg', fallback: "no_image.jpg" %><br>
            <% end %>
            <%= item.name %><br>
            <%= item.price %>円
          </div>
        <% end %>
    </div>
  </div>
</div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-4">
      <%= paginate @items %>
    </div>
  </div>