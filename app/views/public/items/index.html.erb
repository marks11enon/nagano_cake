<div class="container">
  <div class:"row">
    <!-- ジャンル検索バー  -->
  	  <%= render 'public/items/sidebar', genres: @genres %>
    <div class="col-xs-1">
    </div>

    <div class="col-xs-8">
    <h4 style="margin: 20px 0;">商品一覧(全<%= @quantity %>件)</h4>
  		<div class="row">

        <% @items.each do |item| %>
          <div class="box" style="float:left; margin-right:20px;">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, size:"200x150", format: 'jpeg', fallback: "no_image.jpg" %><br>
            <% end %>
            <p><%= item.name %></p>
            <p><%= item.price %>円</p>
          </div>
        <% end %>
      </div>
      <div class="col-xs-6 col-xs-offset-4">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>