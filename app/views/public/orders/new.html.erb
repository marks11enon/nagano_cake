<div class="row">
  <div class="col-xs-7">
    <h2><i class="fas fa-pen"></i>注文情報入力</h2>
    <!-- <p><%= notice %></p> -->

    <%= form_with url: orders_path, method: :post do |f| %>
      <div class="form-group">
        <h3>支払方法</h3>
        <%= f.radio_button :payment, Order.payments.key(0) %>
        <%= f.label :payment, Order.payments_i18n[:credit_card] %>
        <%= f.radio_button :payment, Order.payments.key(1) %>
        <%= f.label :payment, Order.payments_i18n[:transfer]%>
      </div>
      <div class="form-group mt-4">
        <div>
          <h3>お届け先</h3>
          <!-- 自身の住所  -->
          <%= f.radio_button :address_select, 0 %>
          <%= f.label :ご自身の住所 %><br>
          <%= @customer.postal_code %> <%= @customer.address %><br>
          <%= @customer.last_name %> <%= @customer.first_name %><br>
  		  </div>
  		  <div>
          <%= f.radio_button :address_select, 1 %>
          <%= f.label :登録済住所から選択 %><br>
          <%= f.select :address, options_from_collection_for_select(Address.all, :id, :address_display) %><br>
			  </div>
		    <div>
		      <%= f.radio_button :address_select, 2 %>
		      <%= f.label :新しいお届け先 %><br>
	      </div>
			  <div class="form-group col-xs-12">
			    <%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3 control-label"  %>
			    <%= f.text_field :postal_code, class: "col-xs-4 form-control-static postal_code" %>
		    </div>
  			<div class="form-group col-xs-12">
  				<%= f.label :"住所", class: "col-xs-3 control-label" %>
  				<%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
  			</div>
  			<div class="form-group col-xs-12">
  				<%= f.label :"宛名", class: "col-xs-3 control-label" %>
  				<%= f.text_field :name, class: "col-xs-4 form-control-static name"%>
  			</div>
			</div>
			<div class="action">
			  <%= f.submit "確認画面へ進む", class: 'btn btn-warning col-xs-6 col-xs-offset-1'%>
		  </div>
  	<% end %>
  </div>
</div>