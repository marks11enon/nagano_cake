<div class="container">
  <%= flash[:erorr] %>
  <div class="row">
    <h4>ログイン</h4>
  </div>
  <div class="row">
    <div class="col-xs-3">
      <%= flash[:error] %>
    </div>

    <div class="col-xs-6">
      <br>
      <h5 class="pl-3 bg-light text-dark">会員の方はこちらからログイン</h5>
      <br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div><br>
      <% end %>

      <br>
      <h5 class="pl-3 bg-light text-dark">会員登録がお済みでない方</h5>
      <div class="pl-3">
        <%= link_to "こちら", new_customer_registration_path %> から新規登録を行なってください。
      </div>
    </div>
  </div>
</div>